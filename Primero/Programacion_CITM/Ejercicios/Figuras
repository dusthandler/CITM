int main() {

	int x, c, y, cont; //x=filas, c=columnas , y=

	printf("Cuantas filas quieres?\n");
	scanf_s("%i", &x);
	printf("\n");

	for (cont = 1; cont <= x; cont++) {
		y = x - cont;

		for (c = 0; c < y; c++) {
			printf(" ");
		}

		for (c = 0; c < cont - 1; c++) {
			printf("**");
		}
		printf("*");
		printf("\n");
	}
	printf("\n");

	system("pause");
	return 0;
}
